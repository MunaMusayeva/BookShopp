@model BookShopp.Models.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}
<div class="container d-flex justify-content-center align-items-center">
    <div class="p-5 rounded-4 shadow-lg w-50" style="background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(15px); border: 1px solid rgba(255, 255, 255, 0.1); box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);">
        <h2 class="text-center mb-4 text-uppercase text-white fw-bold" style="font-family: 'Poppins', sans-serif; letter-spacing: 3px;">
            <i class="fas fa-user-times me-2"></i> Delete User
        </h2>

        <form asp-controller="User" asp-action="Delete" method="post">
            <div class="mb-4">
                <label asp-for="User.Id" class="form-label text-white">User ID</label>
                <input asp-for="User.Id" name="id" class="form-control p-3 rounded-3 text-white bg-dark border-0 shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2);"
                       placeholder="Enter user ID" />
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger w-100 py-3 rounded-3 fw-bold text-uppercase"
                        style="background: linear-gradient(135deg, #ff416c, #ff4b2b); border: none; box-shadow: 0 4px 15px rgba(255, 65, 108, 0.3); transition: all 0.3s ease-in-out;"
                        onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 6px 20px rgba(255, 65, 108, 0.5)';"
                        onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 15px rgba(255, 65, 108, 0.3)';">
                    <i class="fas fa-trash-alt me-2"></i> Delete User
                </button>
            </div>
        </form>
    </div>
</div>