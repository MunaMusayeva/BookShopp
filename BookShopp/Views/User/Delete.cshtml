@model BookShopp.Models.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}
<div class="d-flex justify-content-center align-items-center vh-100" 
     style="background: linear-gradient(135deg, #1e90ff, #00c9a7);">

    <div class="p-5 rounded-4 shadow-lg text-center w-50" 
         style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 20px;">

        <h2 class="text-white text-uppercase fw-bold" 
            style="font-family: 'Poppins', sans-serif; letter-spacing: 2px;">
            <i class="fas fa-user-times me-2"></i> Delete User
        </h2>

        <form asp-controller="User" asp-action="Delete" method="post">
            <div class="mb-4 text-start">
                <label asp-for="User.Id" class="form-label text-white fw-semibold">User ID</label>
                <div class="input-group">
                    <span class="input-group-text" 
                          style="background: rgba(255, 255, 255, 0.3); border: none;">
                        <i class="fas fa-user text-white"></i>
                    </span>
                    <input asp-for="User.Id" name="id" 
                           class="form-control p-3 text-white"
                           style="background: rgba(255, 255, 255, 0.3); border: none;" 
                           placeholder="Enter user ID" />
                </div>
            </div>

            <button type="submit" class="btn w-100 py-3 rounded-3 fw-bold text-uppercase"
                    style=" background: linear-gradient(to right, #1e90ff, #8a2be2);; color: white; border: none; transition: 0.3s ease-in-out;"
                    onmouseover="this.style.background='linear-gradient(135deg, #1e90ff, #00c9a7)';"
                    onmouseout="this.style.background='linear-gradient(to right, #1e90ff, #8a2be2)';">
                <i class="fas fa-trash-alt me-2"></i> Delete User
            </button>
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "User") "  class="btn w-100 py-3 rounded-3 mt-5 fw-bold text-uppercase"  style=" background: linear-gradient(to right, #1e90ff, #8a2be2);; color: white; border: none; transition: 0.3s ease-in-out;"
                   
                    >Cancel</a>
            </div>
        </form>
    </div>
</div>
<style>
    body{
        background: linear-gradient(135deg, #1e90ff, #00c9a7);
    }
</style>