@model BookShopp.Models.BookViewModel


@{
    ViewData["Title"] = "Book";
}

<h2>Add Book</h2>

<form asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Book.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input asp-for="Book.Author" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Genre">Genre</label>
        <input asp-for="Book.Genre" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Pages">Pages</label>
        <input asp-for="Book.Pages" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ReadCount">ReadCount</label>
        <input asp-for="Book.ReadCount" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Book.Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Book.Price" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Image">Profile Image URL</label>
        <input asp-for="Book.Image" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

