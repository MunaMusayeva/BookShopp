@model BookShopp.Models.BookViewModel

@{
    ViewData["Title"] = "Book";
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="p-5 rounded-4 shadow-lg text-center" style="background: #ff6699; width: 400px; border-radius: 20px;">
        <h2 class="mb-4 text-white fw-bold" style="font-family: 'Poppins', sans-serif; letter-spacing: 3px;">
            Delete Book
        </h2>

        <form asp-controller="Book" asp-action="Delete" method="post">
            <div class="mb-4 text-start">
                <label asp-for="Book.Id" class="form-label text-white">Book ID</label>
                <div class="input-group">
                    <span class="input-group-text" style="background: #ff4d88; border: none;">
                        <i class="fas fa-book text-white"></i>
                    </span>
                    <input asp-for="Book.Id" name="id" class="form-control p-3 rounded-3 text-white"
                        style="background: #ff80b3; border: none;" placeholder="Enter book ID" />
                </div>
            </div>

            <button type="submit" class="btn w-100 py-3 rounded-3 fw-bold text-uppercase"
                style="background: #ff3366; color: white; border: none; transition: 0.3s ease-in-out;"
                onmouseover="this.style.background='#ff1a4d';"
                onmouseout="this.style.background='#ff3366';">
                Delete Book
            </button>
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Book") "  class="btn w-100 py-3 rounded-3 mt-5 fw-bold text-uppercase"  style="background: #ff3366; color: white; border: none; transition: 0.3s ease-in-out;"
                onmouseover="this.style.background='#ff1a4d';"
                onmouseout="this.style.background='#ff3366';">Cancel</a>
            </div>
        </form>
    </div>
</div>
