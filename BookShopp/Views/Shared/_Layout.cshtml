<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookShopp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookShopp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class=" nav navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container-fluid nav ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookShopp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-action="Add" asp-controller="User" class="btn3">Add</a>
                    <a asp-action="Delete" asp-controller="User" class="btn2">Delete</a>
                        
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookShopp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .navbar-brand{
        color:white;

    }
    .navbar-brand:hover{
        color:white;

    }
    .nav{
        background-color:#0A97B0;


    }
    .btn2 {

    background:#EB455F;
    color: white;
    border: none;
    padding: 10px 32px;
    border-radius: 8px;
    cursor: pointer;
    font-weight: bold;
    transition: 0.3s;
    text-decoration:none;
     margin-top: 10px;

    }
     .btn3 {

    background:#00DFA2;
    color: white;
    border: none;
    padding: 10px 32px;
    border-radius: 8px;
    cursor: pointer;
    font-weight: bold;
    transition: 0.3s;
    text-decoration:none;
     margin-top: 10px;

    }
   
    .btn2:hover{
    color:white;}
   
</style>
