<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookShopp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookShopp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="nav navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 @(
    ViewData["Title"]?.ToString() == "Book"
    ? "navbar-book"
    : (ViewData["Title"]?.ToString() == "Course"
        ? "navbar-course"
        : "")
)
">
            <div class="container-fluid nav">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookShopp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (ViewData["Title"]?.ToString() == "User")
                            {
                                <a asp-action="Add" asp-controller="User" class="btn3">Add</a>
                                <a asp-action="Delete" asp-controller="User" class="btn2">Delete</a>
                            }
                            else if (ViewData["Title"]?.ToString() == "Book")
                            {
                                <a asp-action="Add" asp-controller="Book" class="btn3">Add</a>
                                <a asp-action="Delete" asp-controller="Book" class="btn2">Delete</a>
                            }
                            else if (ViewData["Title"]?.ToString() == "Course")
                            {
                                <a asp-action="Add" asp-controller="Course" class="btn3">Add</a>
                                <a asp-action="Delete" asp-controller="Course" class="btn2">Delete</a>
                            }
                            
                        </li>
                    </ul>

                     <ul class="nav navbar-nav">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                </svg> Cart
                    </a>
                            @await Component.InvokeAsync("CartSummary")
                </li>
            </ul>


                </div>
            </div>
        </nav>


    </header>
     <div class="col-md-2">
        @await Component.InvokeAsync("BookList")
    </div>
    <div class="container mt-4 p-4">
        <main role="main" class="pb-3">
            @if (TempData["message"] != null)
            {
                    <div class="alert alert-info" role="alert">
                    @TempData["message"]
                    </div>
            }
            @RenderBody()
        </main>
    </div>


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>

<style>
    .navbar {
        background-color: #0A97B0; 
        padding: 10px 0; 

    }

    .navbar-book {
        background-color: #DE3163;
    }

    .navbar-course {
        background-color: #FFB22C;
    }

    .navbar-brand {
        color: white;
    }

        .navbar-brand:hover {
            color: white;
        }

    .btn2 {
        background: #EB455F;
        color: white;
        border: none;
        padding: 10px 32px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: 0.3s;
        text-decoration: none;
        margin-top: 10px;
    }

    .btn3 {
        background: #00DFA2;
        color: white;
        border: none;
        padding: 10px 32px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: 0.3s;
        text-decoration: none;
        margin-top: 10px;
    }

    .btn2:hover {
        color: white;
    }

    .nav
    {
        display:grid;
        align-items: center;
        justify-content: center;
    }
    
    .container {
        margin-top: 60px;
    }

    

</style>
