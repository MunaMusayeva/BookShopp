@model BookShopp.Models.CourseViewModel
@{
    ViewData["Title"] = "Course";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-container p-5 rounded-4 shadow-lg w-50" style="background-color: #f9f9f9; border: 1px solid #ddd;">
        <h2 class="text-center mb-4 text-uppercase text-dark fw-bold" style="font-family: 'Poppins', sans-serif;">
            <i class="fas fa-user-edit me-2"></i> Edit Course
        </h2>

        <form asp-controller="Course" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Course.Id" />

            <div class="mb-3">
                <label asp-for="Course.Name" class="form-label">Name</label>
                <input asp-for="Course.Name" class="form-control p-3" placeholder="Enter name" />
            </div>

            <div class="mb-3">
                <label asp-for="Course.Mentor" class="form-label">Mentor</label>
                <input asp-for="Course.Mentor" class="form-control p-3" placeholder="Enter Mentor" />
            </div>

            <div class="mb-3">
                <label asp-for="Course.Duration" class="form-label">Duration</label>
                <input asp-for="Course.Duration"  class="form-control p-3" placeholder="Enter Duration" />
            </div>

            <div class="mb-3">
                <label asp-for="Course.Required_Skills" class="form-label">Required Skills</label>
                <input asp-for="Course.Required_Skills"  class="form-control p-3" placeholder="Enter Required Skills" />
            </div>

            <div class="mb-3">
                <label asp-for="Course.Price" class="form-label">Price</label>
                <input asp-for="Course.Price"  class="form-control p-3" placeholder="Enter Price" />
            </div>
            <div class="mb-4">
                <label asp-for="Course.Image" class="form-label">Profile Picture Path</label>
                <input asp-for="Course.Image" class="form-control p-3" placeholder="Enter profile picture path" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Save</button>
                <a href="@Url.Action("Index", "Course")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
<style>
    body {
        background: linear-gradient(135deg, #FFC107, #FFD700, #FFEA70, #FFFACD);
    }
</style>