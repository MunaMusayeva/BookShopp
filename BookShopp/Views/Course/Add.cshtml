@model BookShopp.Models.CourseViewModel


@{
    ViewData["Title"] = "Course";
}

<h2>Add Course</h2>

<form asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Course.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Mentor">Mentor</label>
        <input asp-for="Course.Mentor" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Duration">Duration</label>
        <input asp-for="Course.Duration" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Course.Price" class="form-control" required />
    </div>
      <div class="form-group">
        <label asp-for="Required_Skills">Required Skills</label>
        <input asp-for="Course.Required_Skills" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Image">Profile Image URL</label>
        <input asp-for="Course.Image" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

