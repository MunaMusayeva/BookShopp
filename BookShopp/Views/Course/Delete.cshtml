@model BookShopp.Models.CourseViewModel

@{
    ViewData["Title"] = "Course";
}
<div class="d-flex justify-content-center align-items-center vh-100" 
    >

    <div class="p-5 rounded-4 shadow-lg text-center w-50" 
         style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 20px;">

        <h2 class="text-dark text-uppercase fw-bold" 
            style="font-family: 'Poppins', sans-serif; letter-spacing: 2px;">
            <i class="fas fa-trash-alt me-2"></i> Delete Course
        </h2>

        <form asp-controller="Course" asp-action="Delete" method="post">
            <div class="mb-4 text-start">
                <label asp-for="Course.Id" class="form-label text-dark fw-semibold">Course ID</label>
                <div class="input-group">
                    <span class="input-group-text" 
                          style="background: rgba(255, 255, 255, 0.3); border: none;">
                        <i class="fas fa-book text-dark"></i>
                    </span>
                    <input asp-for="Course.Id" name="id" 
                           class="form-control p-3 text-dark"
                           style="background: rgba(255, 255, 255, 0.3); border: none;" 
                           placeholder="Enter course ID" />
                </div>
            </div>

            <button type="submit" class="btn w-100 py-3 rounded-3 fw-bold text-uppercase"
                    style="background: linear-gradient(135deg, #FFA500, #FF8C00); color: white; border: none; transition: 0.3s ease-in-out;"
                    onmouseover="this.style.background='linear-gradient(135deg, #FF4500, #FF6347)';"
                    onmouseout="this.style.background='linear-gradient(135deg, #FFA500, #FF8C00)';">
                <i class="fas fa-trash-alt me-2"></i> Delete Course
            </button>
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Course") "  class="btn w-100 py-3 rounded-3 mt-5 fw-bold text-uppercase"  style="background: linear-gradient(135deg, #FFA500, #FF8C00); color: white; border: none; transition: 0.3s ease-in-out;"
                    onmouseover="this.style.background='linear-gradient(135deg, #FF4500, #FF6347)';"
                    onmouseout="this.style.background='linear-gradient(135deg, #FFA500, #FF8C00)'">Cancel</a>
            </div>
        </form>
    </div>
</div>
<style>
    body{
        background: linear-gradient(135deg, #FFC107, #FFD700, #FFEA70, #FFFACD);
    }
</style>